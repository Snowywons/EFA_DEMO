@model EFA_DEMO.Models.PostView

@{
    ViewBag.Title = "Tags";
}

<h2>
    @Helper.GlyphiconAction("Index", "Posts", "glyphicon-arrow-left", "Retour")
    Étiquettes recherchées
</h2>

<hr />

@using (Html.BeginForm()) 
{
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tags, new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Tags }})
                @Html.ValidationMessageFor(model => model.Tags, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Soumettre" class="btn btn-success" />
            </div>
        </div>
    </div>
}
